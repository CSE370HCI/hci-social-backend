{
  "settings": {
    "loggerFormat": "tiny",
    "session": {
      "store": "@foal/typeorm",
      "expirationTimeouts": {
        "inactivity": 86400
      }
    },
    "disk": {
      "driver": "local",
      "local": {
        "directory": "public/uploads"
      }
    },
    "multipartRequests": {
      "fileSizeLimit": 10485760
    },
    "staticPathPrefix": "env(API_PREFIX)"
  },
  "database": {
    "type": "sqlite",
    "database": "./db.sqlite3",
    "synchronize": true
  }
}
